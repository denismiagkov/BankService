<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.10.xsd">

    <changeSet id="001-create-schema-bank" author="denismiagkov">
        <sql>CREATE SCHEMA IF NOT EXISTS bank</sql>
    </changeSet>
    <changeSet id="002-create-sequence-users_id_seq" author="denismiagkov">
        <createSequence schemaName="bank" sequenceName="users_id_seq" startValue="1" incrementBy="1"/>
    </changeSet>
    <changeSet id="003-create-table-users" author="denismiagkov">
        <createTable schemaName="bank" tableName="users">
            <column name="id" type="BIGINT" defaultValueSequenceNext="users_id_seq">
                <constraints primaryKey="true"/>
                <!--  Идентификатор пользователя -->
            </column>
            <column name="name" type="VARCHAR(25)">
                <constraints nullable="false"/>
                <!-- Имя пользователя -->
            </column>
            <column name="patronymic" type="VARCHAR(25)">
                <constraints nullable="false"/>
                <!-- Отчество пользователя -->
            </column>
            <column name="lastname" type="VARCHAR(25)">
                <constraints nullable="false"/>
                <!-- Фамилия пользователя -->
            </column>
            <column name="birthdate" type="VARCHAR(25)">
                <constraints nullable="false"/>
                <!-- Дата рождения пользователя -->
            </column>
            <column name="phone" type="VARCHAR(15)">
                <constraints nullable="false"/>
                <!-- Контактный телефон пользователя -->
            </column>
            <column name="email" type="VARCHAR(45)">
                <constraints nullable="false"/>
                <!-- Адрес электронной почты пользователя -->
            </column>
            <column name="login" type="VARCHAR(25)">
                <constraints nullable="false"/>
                <!-- Логин пользователя -->
            </column>
            <column name="password" type="VARCHAR(25)">
                <constraints nullable="false"/>
                <!-- Пароль пользователя -->
            </column>
        </createTable>
    </changeSet>
    <changeSet id="004-create-sequence-accounts_id_seq" author="denismiagkov">
        <createSequence sequenceName="accounts_id_seq" startValue="1" incrementBy="1"/>
    </changeSet>
    <changeSet id="005-create-table-accounts" author="denismiagkov">
        <createTable schemaName="bank" tableName="accounts">
            <column name="id" type="BIGINT" defaultValueSequenceNext="accounts_id_seq">
                <constraints primaryKey="true"/>
                <!-- Идентификатор счета пользователя -->
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="FK_accounts_user_id"
                             referencedColumnNames="id" referencedTableName="users"
                             referencedTableSchemaName="bank"/>
                <!-- Идентификатор пользователя-владельца счета -->
            </column>
            <column name="number" type="VARCHAR(25)">
                <constraints nullable="false"/>
                <!-- Номер счета -->
            </column>
            <column name="balance" type="NUMERIC">
                <constraints nullable="false"/>
                <!-- Остаток денежных средств на счете -->
            </column>
        </createTable>
    </changeSet>
